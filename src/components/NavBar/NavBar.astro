---
import SearchBar from '../react/NavBar/SearchBar';
import LanguageSwitcher from '../LanguageSwitcher.astro';
import GenreSwitcher from '../GenreSwitcher.astro';

const { lang } = Astro.params;

---

<nav class="sticky top-0 bg-gray-800 text-white py-1.5 z-10" aria-label="Main navigation">
    <div class="flex justify-between items-center w-full">
        <!-- Render the title of the website -->
        <div class="flex-none pl-6 pr-4">
            <a href="/" class="text-3xl font-bold hover:opacity-75 transition-opacity duration-300 flex items-center" aria-label="Home">


                <!-- Old and good icon -->
                <svg class="mr-3 h-8" viewBox="0 0 120 100" xmlns="http://www.w3.org/2000/svg" aria-labelledby="title">
                    <title>KinemiFy Logo</title>
                    <defs>
                        <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:#FF4444;stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#EF4444;stop-opacity:1" />
                        </linearGradient>
                        <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
                            <feDropShadow dx="2" dy="4" stdDeviation="3" flood-color="rgba(0,0,0,0.3)" />
                        </filter>
                    </defs>
                    <!-- Diode-inspired K with integrated play button -->
                    <path d="M20,20 L40,50 L20,80 M40,50 L70,30 L70,70 L40,50" stroke="#FFFFFF" stroke-width="8" fill="none" filter="url(#shadow)" stroke-linecap="round" stroke-linejoin="round"/>
                    <polygon points="40,50 70,30 70,70" fill="url(#grad1)" filter="url(#shadow)" />
                </svg>
                
                <div class="text-3xl font-bold flex items-center logo-text">
                    <span class="text-white" style="font-family: 'Montserrat', sans-serif;">K</span>
                    <span class="text-gray-300" style="font-family: 'Montserrat', sans-serif;">inemi</span>
                    <span class="text-red-400" style="font-family: 'Montserrat', sans-serif;">Fy</span>
                </div>
            </a>
        </div>

        <!-- Render the menu items and the search bar -->
        <ul class="flex justify-center items-center flex-grow" role="menubar">
            <GenreSwitcher />
            <div class="flex flex-grow items-center justify-end pl-5 pr-2">
                <SearchBar client:only="react" lang={lang}/>
                <div class="ml-4">
                    <LanguageSwitcher />
                </div>
            </div>
        </ul>
    </div>
</nav>

<!-- Include your JavaScript and React scripts as needed -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<!-- Import Montserrat font -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
<style>
    .logo-text {
        font-family: 'Montserrat', sans-serif;
    }
</style>
