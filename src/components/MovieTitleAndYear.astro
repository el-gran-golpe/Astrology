---
import { getTranslationFunction } from '../utils/localization.ts';

// Get the translation function
const { lang } = Astro.params;
const t = getTranslationFunction(lang);

interface MovieTitleAndYear {
    title: string;
    year: number;
}

const title= Astro.props.title;
const year= Astro.props.year;
---

<div class="mb-8 flex items-end">
    <h1 class="text-6xl font-bold text-gray-900 dark:text-white leading-none">
        {title}
    </h1>
    <span class="ml-2 flex items-end">
        <span class="text-4xl text-gray-700 dark:text-gray-300 align-baseline">
            ({year})
        </span>
        <span class="text-sm font-light text-gray-500 dark:text-gray-400 opacity-75 italic ml-2">
            {t("Sub | Dub")}
        </span>
    </span>
</div>






