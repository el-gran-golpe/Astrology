---
const gridStyle = {
    gridTemplateColumns: 'repeat(auto-fit, minmax(11rem, 1fr))',
    gridAutoRows: '17rem',
    gridColumnGap: '0.5rem',
    gridRowGap: '0.5rem'
};
---

<div class="grid-container" role="grid">
    <slot></slot>
</div>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(11rem, 1fr));
    grid-auto-rows: 17rem;
    gap: 0.5rem;
  }
</style>
