---
/* No frontmatter needed for this simple component */
---

<div class="grid-container" role="grid">
  <slot></slot>
</div>

<style>
  .grid-container {
    display: grid;
    /* Mobile first - 2 columns */
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
    /* Remove the left padding to align with title */
    padding: 0.25rem 0.25rem 0.25rem 0;
  }

  /* Small mobile breakpoint */
  @media (min-width: 400px) {
    .grid-container {
      grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
      gap: 0.75rem;
      /* Remove the left padding to align with title */
      padding: 0.5rem 0.5rem 0.5rem 0;
    }
  }

  /* Tablet breakpoint */
  @media (min-width: 640px) {
    .grid-container {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    }
  }

  /* Desktop breakpoint */
  @media (min-width: 1024px) {
    .grid-container {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    }
  }

  /* The grid container sets the width, but let the cards control their own height */
  :global(.grid-container > *) {
    aspect-ratio: 2/3;
    width: 100%;
    height: auto;
  }
</style>
