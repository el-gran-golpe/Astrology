---
import { getTopPagesByLang } from '../../utils/staticPathsGeneration.ts';
import Head from '../../components/Head.astro';
import UpdateVisitedFilms from '../../stores/updateVisitedFilms';
import { getTranslationFunction } from '../../utils/localization.ts';

export async function getStaticPaths() {
  return await getTopPagesByLang();
}

const { filmSlug, lang } = Astro.params;
const filmInfo = Astro.props

const t = getTranslationFunction(lang);

// Import Tailwind CSS
import "../../layouts/global.css";

// Import the components
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faStar } from '@fortawesome/free-solid-svg-icons';
import  renderStars from '../../components/react/RenderStars.jsx';
import  CastSection  from '../../components/react/CastSection.jsx';
import FakeLinkTable from '../../components/react/FakeLinkTable';
import NavBar from '../../components/react/NavBar/NavBar';
---

<html lang={lang}>
  <Head
    title={filmInfo.locationInfo.title}
    description={filmInfo.locationInfo.synopsis}
    lang={lang}
    afterLangUrl={filmSlug}

    OGTitle={`${t("Watch")} ${filmInfo.locationInfo.title} Online`}
    OGType="video.movie"
    OGImage={filmInfo.extended_info.poster_url},
    OGImageAlt={`${filmInfo.locationInfo.title} Poster`}
  />
  
  <body>
    <NavBar client:only="react" />
    <div class="bg-gray-900 text-white">
      {/* Single-movie hero-banner image container */}  
      <div class="mb-6 mx-0 w-full h-[33vh] relative overflow-hidden">
        <img src={filmInfo.extended_info.poster_url} alt="Banner" class="absolute w-full h-full object-cover" />
        {/* YouTube video iframe */}
        <div class="absolute top-0 left-1/4 w-1/2 h-3/4 z-10">
          <iframe
            src="https://www.youtube.com/embed/JpUd4BS7yI0?rel=0"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            class="w-full h-full"
          ></iframe>
        </div>
        {/* Gradient Overlay */}
        <div class="absolute inset-0 z-0">
          <div class="absolute bottom-0 w-full h-1/2 bg-gradient-to-b from-transparent via-transparent to-gray-900"></div>
        </div>
      </div>

      <main class="container mx-auto px-6 py-4"> 
        <div class="flex">
          {/* Left column content */}
          <div class="w-1/3">
            {/* Movie poster */}
            <div class="rounded-lg shadow-lg overflow-hidden">
              <img src={filmInfo.extended_info.poster_url} alt="frontPageImage" class="w-full object-cover" />
            </div>
            {/* Movie info details */}
            <ul class="text-white p-4 bg-gray-800 rounded-lg shadow-lg mt-2">
              <li class="py-2">
                <h3 class="text-sm font-bold text-gray-300">RATING</h3>
                <p class="text-xs text-gray-400"><FontAwesomeIcon icon={faStar} /> 94% (416k) 8.4/634k</p>
              </li>
              <li class="py-2">
                <h3 class="text-sm font-bold text-gray-300">GENRES</h3>
                <p class="text-xs text-gray-400">Drama, History</p>
              </li>
              <li class="py-2">
                <h3 class="text-sm font-bold text-gray-300">DURATION</h3>
                <p class="text-xs text-gray-400">3h 1min</p>
              </li>
              <li class="py-2">
                <h3 class="text-sm font-bold text-gray-300">AGE RATING</h3>
                <p class="text-xs text-gray-400">12</p>
              </li>
              <li class="py-2">
                <h3 class="text-sm font-bold text-gray-300">PRODUCTION COUNTRY</h3>
                <p class="text-xs text-gray-400">United Kingdom, United States</p>
              </li>
              <li class="py-2">
                <h3 class="text-sm font-bold text-gray-300">DIRECTOR</h3>
                <p class="text-xs text-gray-400">[Director's Name]</p>
              </li>
            </ul>
          </div>

          {/* Right column content */}
          <div class="w-2/3 px-5">
            <div class="mb-6">
              <h1 class="text-5xl text-gray-900 dark:text-white">
                {filmInfo.locationInfo.title} <span class="text-3xl">(2023)</span>
              </h1>
            </div>
            {/* Movie details with a refined layout */}
            <div class="mt-4">
              <div class="flex justify-between items-center mb-6">
                <span class="text-xl font-medium text-gray-400">Sub | Dub</span>
                <div class="flex items-center space-x-2 bg-gray-800 p-2 rounded-lg">
                  {renderStars(4.6)}
                  <span class="text-xl text-white">4.6</span>
                  <span class="text-gray-400">/</span>
                  <span class="text-sm text-gray-400">(16K votes)</span>
                </div>
              </div>
              <div class="bg-gray-800 p-4 rounded-lg shadow">
                <h3 class="text-xl text-white mb-2">Rating & Reviews</h3>
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="text-yellow-400">
                      <FontAwesomeIcon icon={faStar} />
                    </div>
                    <div class="ml-2">
                      <p class="text-lg text-white">94% Overwhelmingly positive</p> {/* (Steam reference XD) */}
                      <p class="text-sm text-gray-400">(416k reviews)</p>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="text-lg text-white">8.4</p>
                    <p class="text-sm text-gray-400">User Score</p>
                  </div>
                </div>
              </div>
            </div>

            <h2 class="text-2xl text-gray-300 mt-10">Synopsis</h2>
            <p class="text-lg text-gray-400 mt-3">
              {filmInfo.locationInfo.synopsis}
            </p>

            <FakeLinkTable client:load/>

            <CastSection />

            <h2 class="text-2xl text-gray-300 mt-10">Qu√© saber</h2>
            <p class="text-lg text-gray-400 mt-3">
              {filmInfo.extended_info.plot}
            </p>
          
          </div>
        </div>  
      </main>
      {/* Save the visited film in the local-storage to have it accessible for visited films recommendations (crossTab update)*/}
      <UpdateVisitedFilms slug={filmSlug} title={filmInfo.locationInfo.title} posterURL={filmInfo.extended_info.poster_url} client:idle/>
    </div>
  </body>
</html>