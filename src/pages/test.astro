// src/pages/[id].astro (or any other .astro file where you want to display the data)
import { doc, getDoc } from 'firebase/firestore';
import { db } from '../configs/firebase.js'; 

// Function to fetch film data with a specific ID
async function getFilmData() {
  const filmId = 'spider-man-3'; // Hardcoded ID for the specific film
  const docRef = doc(db, 'films', filmId);
  const docSnap = await getDoc(docRef);

  if (docSnap.exists()) {
    // Return the data for the 'basic_info' field
    return docSnap.data().basic_info;
  } else {
    // Handle the case where the document does not exist
    console.log('No such document!');
    return null;
  }
}

const basicInfo = await getFilmData();
---

<html>
<head>
  <title>{basicInfo ? basicInfo.original_title : 'Film Not Found'}</title>
</head>
<body>
  <!-- Display the original title in an <h1> tag -->
  <h1>{basicInfo ? basicInfo.original_title : 'Film Not Found'}</h1>
</body>
</html>

